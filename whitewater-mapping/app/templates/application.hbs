<div class="container">

  {{#bs-navbar
    type='navbar navbar-default'
    fluid=false
    collapsed=true
    onCollapse=(action (mut collapsed) true)
    onExpand=(action (mut collapsed) false)
  as |navbar|}}

    <div class="navbar-header">
      {{navbar.toggle}}
      {{#link-to "index" class="navbar-brand"}}Whitewater Mapping{{/link-to}}
    </div>

    {{#navbar.content}}
      {{#navbar.nav as |nav|}}
        {{#nav.item}}{{#nav.link-to "index"}}Home{{/nav.link-to}}{{/nav.item}}
      {{/navbar.nav}}
    {{/navbar.content}}

  {{/bs-navbar}}

  {{outlet}}

</div>
